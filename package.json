{
  "name": "media-mcp",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm build:shared && pnpm build:services && pnpm build:server",
    "build:shared": "pnpm --filter @media-mcp/shared build",
    "build:services": "pnpm --filter @media-mcp/prowlarr --filter @media-mcp/sonarr --filter @media-mcp/gotify --filter @media-mcp/overseerr build",
    "build:server": "pnpm --filter @media-mcp/server build",
    "prestart": "node build/project-setup.js",
    "start": "pnpm --filter @media-mcp/server start",
    "dev": "pnpm -r dev",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.4.1",
    "@types/node": "^22.12.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.19.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3",
    "zod": "^3.24.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
